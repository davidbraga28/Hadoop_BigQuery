<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>email</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/hql</directory>
			<outputDirectory>hql</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/java</directory>
			<outputDirectory>java</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/python</directory>
			<outputDirectory>python</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/sh</directory>
			<outputDirectory>sh</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
